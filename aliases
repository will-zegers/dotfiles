#!/usr/bin/env bash

function cd () {
    new_directory="$*";
    if [ $# -eq 0 ]; then 
        new_directory=${HOME};
    fi;
    builtin cd "${new_directory}" && ls
}

junction bak() {
  cp -r $1 $1.$(timestamp)~
}

# Credit to DistroTube: youtu.be/watch?v=_NRJU37DQLM
function ex () {
  if [ -z $1  ]; then
    echo "usage: ex <filename>"
  elif [ -f $1  ]; then
    case $1 in
      *.tar)                  tar xf     $1 ;;
      *.tar.bz2 | *.tar.tbz2) tar xjf    $1 ;;
      *.tgz)                  tar xzf    $1 ;;
      *.tar.xz)               tar xf     $1 ;;
      *.tar.zst)              unzstd     $1 ;;
      *.bz2)                  bunzip2    $1 ;;
      *.rar)                  unrar x    $1 ;;
      *.gz)                   gunzip     $1 ;;
      *.zip)                  unzip      $1 ;;
      *.Z)                    uncompress $1 ;;
      *.7z)                   77z x      $1 ;;
      *.deb)                  ar x       $1 ;;
      *) echo "'$1' cannot be extracted via ex()" ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}

alias xclip="xclip -sel clip"
alias timestamp="date +%Y.%m.%d@%H:%M"
alias cp=cp -i
alias rr='curl -s -L https://raw.githubusercontent.com/keroserene/rickrollrc/master/roll.sh | bash'
alias bat=batcat
